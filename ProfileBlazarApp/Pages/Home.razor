@page "/"
@using ProfileBlazarApp.Models
@using ProfileBlazarApp.Services
@using Microsoft.AspNetCore.Components.Web
@inject ProfileService ProfileService
@code {
    private Profile? _profile;
    private bool _isLoading = true;
    private string? _error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _profile = await ProfileService.GetProfileAsync();
        }
        catch (Exception)
        {
            _error = "Failed to load profile.";
        }
        finally
        {
            _isLoading = false;
        }
    }
}
<PageTitle>Home</PageTitle>

@if (_isLoading)
{
    <div class="container mt-4">
        <p class="text-muted">Loading profile...</p>
    </div>
}
else if (!string.IsNullOrEmpty(_error))
{
    <div class="container mt-4">
        <div class="alert alert-danger" role="alert">@_error</div>
    </div>
}
else if (_profile is not null)
{
    <div class="container mt-4">
        <div class="d-flex align-items-center">
            <h1>👋 Hey @_profile.FirstName, welcome to BTNX!</h1>
            <img src="/Assets/btnx-logo.png" alt="BTNX Logo" class="app-logo ms-3" />
        </div>
        <p class="lead">View and update your profile information below.</p>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">View Profile</h5>
                        <p class="card-text">View your current profile details.</p>
                        <a href="/view-profile" class="btn btn-primary">View Profile</a>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Edit Profile</h5>
                        <p class="card-text">Update your profile details.</p>
                        <a href="/edit-profile" class="btn btn-primary">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
